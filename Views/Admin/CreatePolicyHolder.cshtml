@using ProjectInsurance.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@model PolicyHolderModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Nový pojištěnec";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
	<div class="container">  
		<h1>@ViewData["Title"]</h1>
		<div class="row pt-4">
			<div class="col-md-6 mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" placeholder="Jan" aria-required="true"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="LastName"></label>
				<input asp-for="LastName" class="form-control" placeholder="Novák" aria-required="true"/>
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-3">
				<label asp-for="EMail"></label>
				<input asp-for="EMail" class="form-control" placeholder="jan.novak@email.com" aria-required="true"/>
				<span asp-validation-for="EMail" class="text-danger"></span>
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="TelephoneNumber"></label>
				<input asp-for="TelephoneNumber" class="form-control" placeholder="123456789" aria-required="true"/>
				<span asp-validation-for="TelephoneNumber" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-3">
				<label asp-for="StreetName"></label>
				<input asp-for="StreetName" class="form-control" placeholder="Náměstí 28. října" aria-required="true"/>
				<span asp-validation-for="StreetName" class="text-danger"></span>
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="BuildingNumber"></label>
				<input asp-for="BuildingNumber" class="form-control" placeholder="1843/7" aria-required="true"/>
				<span asp-validation-for="BuildingNumber" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-3">
				<label asp-for="CityName"></label>
				<input asp-for="CityName" class="form-control" placeholder="Brno" aria-required="true"/>
				<span asp-validation-for="CityName" class="text-danger"></span>
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="ZIPCode"></label>
				<input asp-for="ZIPCode" class="form-control" placeholder="60200" aria-required="true"/>
				<span asp-validation-for="ZIPCode" class="text-danger"></span>
			</div>
		</div>
		<div class="row" >
			<div class="col-md-6 mb-3">
				<label asp-for="UserId"></label>
				<input asp-for="UserId" class="form-control"  readonly placeholder=@Model.UserId/>
				<span asp-validation-for="UserId" class="text-danger"></span>
			</div>			
		</div>
	</div>
	<div class="text-center">
		<button type="submit" class="btn btn-primary" style="width:200px"><i class="bi bi-plus-circle"></i> &nbsp;Přidat</button>
		<a asp-controller="Admin" asp-action="Index" asp-route-id="" class="btn btn-secondary btn-outline-primary" style="width:200px">
			Zpět
		</a>
	</div>
</form>

@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

