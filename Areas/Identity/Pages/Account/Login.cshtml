@page
@model LoginModel

@{
    ViewData["Title"] = "Přihlásit se";
}



<section id="navHeader">
</section>




<section id="register" class="d-flex flex-column min-vh-100">

<form id="account" method="post">
        <div class="container text-dark">
            <h1>@ViewData["Title"]</h1>
            <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row pt-4">
            <div class="form-group col-md-4 mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />          
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4 mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />        
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </di>
        </div>       
    </div>
    <div class="form-group">
                <button id="login-submit" type="submit" class="btn btn-success" style="width:200px">Přihlásit se</button>
    </div>
    <div class="pt-2">
                <p class="text-center">
                    <a class="text-light" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nemáte účet? Zaregistrujte se</a>
        </p>
    </div>
    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</section>