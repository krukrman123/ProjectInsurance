@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Změna hesla";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}



<section id="webSectionCSS">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8">
            <h1>Změna hesla </h1>
            <hr>
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-8">
                    <div class="form-group mb-3">
                        <label asp-for="Input.OldPassword" class="form-label"></label>
                        <input asp-for="Input.OldPassword" class="form-control form-control-sm" type="text">
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-8">
                    <div class="form-group mb-3">
                        <label asp-for="Input.NewPassword" class="form-label"></label>
                        <input asp-for="Input.NewPassword" class="form-control form-control-sm" type="text">
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-8">
                    <div class="form-group mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm" type="text">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12 content-right"><button class="btn btn-primary form-btn" type="submit">Změnit heslo </button></div>
            </div>
        </div>
    </form>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

